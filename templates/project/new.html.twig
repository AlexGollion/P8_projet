{% extends 'base.html.twig' %}

{% block title %} Nouveau projet - TaskLinker {% endblock %}

{% block body %}
    {% block header %}
        <h1>Nouveau projet</h1>
    {% endblock %}

    <div id="content">
        {{ form_start(form, { 'attr' : { 'name': 'projet' }}) }}
            <div>
                {{ form_row(form.title) }}
            </div>
            <div>
                {{ form_row(form.employees) }}
            </div>
            <br>
            <button class="button button-submit">Continuer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
