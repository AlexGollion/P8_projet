{% extends 'base.html.twig' %}

{% block title %}Liste des projets - TaskLinker{% endblock %}

{% block header %}
    <h1>Projets</h1>
{% endblock %}

{% block body %}
    <div id="content">
        <div id="projects-container">
            {% for projet in projets %}
                <article class="card-project">
                    <a href="{{ path('app_projet_affichage', {id: projet.id}) }}">
                        <h2>{{ projet.titre }}</h2>
                    </a>
                    <div class="card-project-icons">
                        <a href="projet-edit.html"><i class="fa-solid fa-pen"></i></a>
                        <a href="{{ path('app_projet_update_page', {id: projet.id}) }}"><i class="fa-solid fa-trash"></i></a>
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
{% endblock %}
